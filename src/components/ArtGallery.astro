---
import { BaseUrl } from "../consts";
import { artworks, getArtWasmName } from "../data/artworks";
---

<div class="art-gallery">
  {artworks.map((artwork) => (
    <a href={`${BaseUrl}/artwork/${getArtWasmName(artwork)}`} class="artwork-card">
      <img src={`/screenshots/${getArtWasmName(artwork)}.png`} class="artwork-preview" />
    </a>
  ))}
</div>

<style>
  .art-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
    padding: 2rem;
  }

  .artwork-card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .artwork-card:hover {
    transform: translateY(-5px);
  }

  .artwork-preview {
    width: 100%;
    height: auto;
  }

  .artwork-name {
    padding: 1rem;
  }

  .artwork-name h2 {
    font-size: 1.2rem;
    margin: 0 0 0.5rem;
  }

  .artwork-name p {
    font-size: 0.9rem;
    margin: 0;
    color: #666;
  }
</style>